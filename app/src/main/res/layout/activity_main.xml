<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/newbackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCardD"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/card4" />

        <Button
            android:id="@+id/rollButtonD"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#D3D3D3"
            android:text="@string/rollButton"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/ejectButtonD"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FF0000"
            android:text="@string/ejectButton"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCardC"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/card3" />

        <Button
            android:id="@+id/rollButtonC"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#D3D3D3"
            android:text="@string/rollButton"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/ejectButtonC"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FF0000"
            android:text="@string/ejectButton"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCardB"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/card2" />

        <Button
            android:id="@+id/rollButtonB"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#D3D3D3"
            android:text="@string/rollButton"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/ejectButtonB"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FF0000"
            android:text="@string/ejectButton"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCardA"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/card1" />

        <Button
            android:id="@+id/rollButtonA"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#D3D3D3"
            android:text="@string/rollButton"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/ejectButtonA"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FF0000"
            android:text="@string/ejectButton"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>